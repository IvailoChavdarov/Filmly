@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section heads{
    <link href="@Url.Content("~/css/Identity/register.css")" rel="stylesheet" type="text/css" />
}


<div class="container">
    <h1>@ViewData["Title"]</h1>

            <section>
                <form id="account" method="post">
                    <h4>Log in as an existing user</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group checkbox-container checkbox-container-sm">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" id="loginButton">Log in</button>
                    </div>
                    <div class="form-group">
                        @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>*@
                        <p>
                            Don't have an Filmly account yet? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a> for free.
                        </p>
                        @*<p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>*@
                    </div>
                </form>
            </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
