@model HomePageData
<div class="showcase">
    <h2>Most popular anime at the moment <a asp-controller="titles" asp-action="ranking" asp-route-id="top-100-most-popular-anime" class="seeAllLink">See all <i class="fas fa-angle-right"></i><i class="fas fa-angle-right"></i></a></h2>
    <div class="container card-deck align-content-center">
        @for (int i = 0; i < 10; i++)
        {
            <a asp-controller="titles" asp-action="details" asp-route-id="@Model.Top10MostPopularAnime[i].Id">
                @if (i == 0 || i == 1 || i == 2)
                {
                    if (i == 0)
                    {
                        <i class="fas fa-crown first hiddenOnMobile"></i>
                    }
                    else if (i == 2)
                    {
                        <i class="fas fa-crown third hiddenOnMobile"></i>
                    }
                    else
                    {
                        <i class="fas fa-crown hiddenOnMobile"></i>
                    }
                }
                <div class="card">
                    <div class="image-container">
                        <img src="@Model.Top10MostPopularAnime[i].Image" alt="@Model.Top10MostPopularAnime[i].Title" />
                    </div>
                    <content>
                        <h4>@Model.Top10MostPopularAnime[i].Title</h4>
                        @if (Model.Top10MostPopularAnime[i].IMDbRating != "")
                        {
                            <div class="rating-container">
                                <i class="star fas fa-star"></i><span>@Model.Top10MostPopularAnime[i].IMDbRating on IMDb</span>
                            </div>
                            <p class="small">from @Model.Top10MostPopularAnime[i].IMDbRatingVotes votes</p>
                        }
                        <p class="medium">Staring @Model.Top10MostPopularAnime[i].Stars</p>
                    </content>
                </div>
            </a>
        }
    </div>
</div>
